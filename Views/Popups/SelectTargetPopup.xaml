<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="WhmCalcMaui.Views.Popups.SelectTargetPopup"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:models="clr-namespace:WhmCalcMaui.Models"
               CanBeDismissedByTappingOutsideOfPopup="True" Color="Transparent"
               x:Name="this">
              
    <ScrollView MaximumHeightRequest="496" WidthRequest="304">
        <Border Style="{StaticResource borderStyle}" Padding="8">
            <CollectionView ItemsLayout="VerticalList"
                            SelectionMode="Single"
                            x:Name="collView"
                            SelectionChanged="CollectionView_SelectionChanged" 
                            EmptyView="Failed to load targets. Try to reopen the app.">

                <CollectionView.ItemTemplate>

                    <DataTemplate x:DataType="models:TargetModel">

                        <!--<Border Style="{StaticResource borderStyle}">-->

                        <VerticalStackLayout Background="Transparent">
                            <Label Style="{StaticResource labelStyle}"
                                   FontAttributes="Bold" FontSize="Medium"
                                   Text="{Binding TargetName}" />
                            <Label Style="{StaticResource labelStyle}"
                                   Text="{Binding TargetProps}" />
                        </VerticalStackLayout>
                        <!--</Border>-->
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Border>
    </ScrollView>
</toolkit:Popup>