<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhmCalcMaui.Views.CustomControls.CheckBoxView"
             x:Name="this">
    <VisualStateManager.VisualStateGroups>
        <VisualStateGroupList>
            <VisualStateGroup x:Name="CheckedStates">
                <VisualState x:Name="Checked">
                    <VisualState.Setters>
                        <Setter TargetName="this"
                                Property="Opacity"
                                Value="1" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Unchecked">
                    <VisualState.Setters>
                        <Setter TargetName="this"
                                Property="Opacity"
                                Value="0.5" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateGroupList>
    </VisualStateManager.VisualStateGroups>

    <Border x:Name="RBborder"
            Stroke="{AppThemeBinding Light={StaticResource MainOutlineColorLight}, Dark={StaticResource MainOutlineColorDark}}"
            StrokeThickness="3"
            StrokeShape="RoundRectangle 5"
            Background="{AppThemeBinding Light={StaticResource BoxesInnerColorLight}, Dark={StaticResource BoxesInnerColorDark}}">

        <Label x:Name="RBname"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               Text="{Binding Source={x:Reference this}, Path=Name}"
               TextColor="{AppThemeBinding Light={StaticResource TextMainColorLight}, Dark={StaticResource TextMainColorDark}}" />
    </Border>
</ContentView>
