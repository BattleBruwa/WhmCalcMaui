<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customViews="clr-namespace:WhmCalcMaui.Views.CustomControls"
             xmlns:models="clr-namespace:WhmCalcMaui.Models"
             xmlns:viewModels="clr-namespace:WhmCalcMaui.ViewModels"
             x:Class="WhmCalcMaui.Views.MainView"
             x:DataType="viewModels:MainViewModel"
             x:Name="this"
             Background="{AppThemeBinding Light={StaticResource MainWindowBackgroundColorLight}, Dark={StaticResource MainWindowBackgroundColorDark}}"
             Padding="8">
    <VerticalStackLayout>

        <!--Аутпут грид-->
        <Grid ColumnDefinitions="*,*,*,*,*,*"
              RowDefinitions="1*,2*"
              BindingContext="{Binding Output}"
              x:DataType="models:OutputModel">
            <Label Text="Attacks"
                   Style="{StaticResource labelStyle}"
                   Grid.Column="0"
                   Grid.Row="0" />
            <Label Text="Hits"
                   Style="{StaticResource labelStyle}"
                   Grid.Column="1"
                   Grid.Row="0" />
            <Label Text="Wounds"
                   Style="{StaticResource labelStyle}"
                   Grid.Column="2"
                   Grid.Row="0" />
            <Label Text="UnSaved"
                   Style="{StaticResource labelStyle}"
                   Grid.Column="3"
                   Grid.Row="0" />
            <Label Text="DeadModels"
                   Style="{StaticResource labelStyle}"
                   Grid.Column="4"
                   Grid.Row="0" />
            <Label Text="TotalDamage"
                   Style="{StaticResource labelStyle}"
                   Grid.Column="5"
                   Grid.Row="0" />
            <customViews:CustomEntryView ControlTemplate="{StaticResource EntryControlTemplate}"
                                         Text="{Binding Attacks, Mode=OneWay}"
                                         IsReadOnly="True"
                                         Grid.Column="0"
                                         Grid.Row="1" />
            <customViews:CustomEntryView ControlTemplate="{StaticResource EntryControlTemplate}"
                                         Text="{Binding NatHits, Mode=OneWay}"
                                         IsReadOnly="True"
                                         Grid.Column="1"
                                         Grid.Row="1" />
            <customViews:CustomEntryView ControlTemplate="{StaticResource EntryControlTemplate}"
                                         Text="{Binding NatWounds, Mode=OneWay}"
                                         IsReadOnly="True"
                                         Grid.Column="2"
                                         Grid.Row="1" />
            <customViews:CustomEntryView ControlTemplate="{StaticResource EntryControlTemplate}"
                                         Text="{Binding UnSavedWounds, Mode=OneWay}"
                                         IsReadOnly="True"
                                         Grid.Column="3"
                                         Grid.Row="1" />
            <customViews:CustomEntryView ControlTemplate="{StaticResource EntryControlTemplate}"
                                         Text="{Binding DeadModels, Mode=OneWay}"
                                         IsReadOnly="True"
                                         Grid.Column="4"
                                         Grid.Row="1" />
            <customViews:CustomEntryView ControlTemplate="{StaticResource EntryControlTemplate}"
                                         Text="{Binding TotalDamage, Mode=OneWay}"
                                         IsReadOnly="True"
                                         Grid.Column="5"
                                         Grid.Row="1" />
        </Grid>
        <!--Мод грид-->
        <!--<CollectionView x:Name="modCollection"
                        ItemsSource="{Binding ModListService.ModificatorsList}"
                        ItemsLayout="VerticalGrid, 2"
                        EmptyView="No items">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:ModificatorModel">
                    <customViews:CheckBoxView Name="{Binding Name}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>-->
        <Grid x:Name="modGrid"
              ColumnDefinitions="*,*"
              RowDefinitions="*,*,*,*,*,*,*">
            <!--рр 1 хит-->
            <customViews:CheckBoxView x:DataType="models:ModificatorModel"
                                      Name="{Binding Name}"
                                      Grid.Column="0"
                                      Grid.Row="0" />
            <!--рр хит-->
            <customViews:CheckBoxView x:DataType="models:ModificatorModel"
                                      Name="{Binding Name}"
                                      Grid.Column="0"
                                      Grid.Row="1" />
            <!--рр 1 вунд-->
            <customViews:CheckBoxView x:DataType="models:ModificatorModel"
                                      Name="{Binding Name}"
                                      Grid.Column="0"
                                      Grid.Row="2" />
            <!--рр вунд-->
            <customViews:CheckBoxView x:DataType="models:ModificatorModel"
                                      Name="{Binding Name}"
                                      Grid.Column="0"
                                      Grid.Row="3" />
            <!--леталки-->
            <customViews:CheckBoxView x:DataType="models:ModificatorModel"
                                      Name="{Binding Name}"
                                      Grid.Column="0"
                                      Grid.Row="4" />
            <!--сус хитс-->
            <!--<customViews:CheckBoxView x:DataType="models:ModificatorModel"
                                      Name="{Binding Name}"
                                      Grid.Column="0"
                                      Grid.Row="5" />-->
            <customViews:PickerCheckBox x:DataType="models:ModificatorModel"
                                        Name="{Binding Name}"
                                        Grid.Column="0"
                                        Grid.Row="5">
                <x:Arguments>
                    <x:Int32>3</x:Int32>
                    <x:String></x:String>
                </x:Arguments>
            </customViews:PickerCheckBox>
            <!--<Border Grid.Column="0"
                    Grid.Row="5"
                    Stroke="{AppThemeBinding Light={StaticResource MainOutlineColorLight}, Dark={StaticResource MainOutlineColorDark}}"
                    StrokeThickness="3"
                    StrokeShape="RoundRectangle 5"
                    Background="{AppThemeBinding Light={StaticResource BoxesInnerColorLight}, Dark={StaticResource BoxesInnerColorDark}}">
                <Picker x:Name="SusHitsControl" HorizontalTextAlignment="Center" VerticalTextAlignment="Center">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Sustained Hits 1</x:String>
                            <x:String>Sustained Hits 2</x:String>
                            <x:String>Sustained Hits 3</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </Border>-->
            <!--дев вундс-->
            <customViews:CheckBoxView x:DataType="models:ModificatorModel"
                                      Name="{Binding Name}"
                                      Grid.Column="0"
                                      Grid.Row="6" />
            <!---1 вунд-->
            <customViews:CheckBoxView x:DataType="models:ModificatorModel"
                                      Name="{Binding Name}"
                                      Grid.Column="1"
                                      Grid.Row="0" />
            <!--анти х-->
            <customViews:CheckBoxView x:DataType="models:ModificatorModel"
                                      Name="{Binding Name}"
                                      Grid.Column="1"
                                      Grid.Row="1" />
            <!--фнп-->
            <customViews:CheckBoxView x:DataType="models:ModificatorModel"
                                      Name="{Binding Name}"
                                      Grid.Column="1"
                                      Grid.Row="2" />
            <!--инвуль-->
            <customViews:CheckBoxView x:DataType="models:ModificatorModel"
                                      Name="{Binding Name}"
                                      Grid.Column="1"
                                      Grid.Row="3" />
            <!---1 дмг-->
            <customViews:CheckBoxView x:DataType="models:ModificatorModel"
                                      Name="{Binding Name}"
                                      Grid.Column="1"
                                      Grid.Row="4" />
            <!--халф дмг-->
            <customViews:CheckBoxView x:DataType="models:ModificatorModel"
                                      Name="{Binding Name}"
                                      Grid.Column="1"
                                      Grid.Row="5" />
            <!--+1 вунд-->
            <customViews:CheckBoxView x:DataType="models:ModificatorModel"
                                      Name="{Binding Name}"
                                      Grid.Column="1"
                                      Grid.Row="6" />
        </Grid>
        <!--Таргет грид-->
        <Grid ColumnDefinitions="4*, 1*, 1*">
        </Grid>
        <!--Инпут грид-->
        <Grid ColumnDefinitions="*,*,*,*,*"
              x:DataType="models:AttackerModel"
              RowDefinitions="1*, 2*"
              BindingContext="{Binding Attacker}">
            <Label Text="Attacks"
                   Style="{StaticResource labelStyle}"
                   Grid.Column="0"
                   Grid.Row="0" />
            <Label Text="Skill"
                   Style="{StaticResource labelStyle}"
                   Grid.Column="1"
                   Grid.Row="0" />
            <Label Text="Strength"
                   Style="{StaticResource labelStyle}"
                   Grid.Column="2"
                   Grid.Row="0" />
            <Label Text="ArmorPen"
                   Style="{StaticResource labelStyle}"
                   Grid.Column="3"
                   Grid.Row="0" />
            <Label Text="Damage"
                   Style="{StaticResource labelStyle}"
                   Grid.Column="4"
                   Grid.Row="0" />

            <customViews:CustomEntryView ControlTemplate="{StaticResource EntryControlTemplate}"
                                         Text="{Binding AttackerA, Mode=TwoWay}"
                                         Grid.Column="0"
                                         Grid.Row="1" />
            <customViews:CustomEntryView ControlTemplate="{StaticResource EntryControlTemplate}"
                                         Text="{Binding AttackerWS, Mode=TwoWay}"
                                         Grid.Column="1"
                                         Grid.Row="1" />
            <customViews:CustomEntryView ControlTemplate="{StaticResource EntryControlTemplate}"
                                         Text="{Binding AttackerS, Mode=TwoWay}"
                                         Grid.Column="2"
                                         Grid.Row="1" />
            <customViews:CustomEntryView ControlTemplate="{StaticResource EntryControlTemplate}"
                                         Text="{Binding AttackerAP, Mode=TwoWay}"
                                         Grid.Column="3"
                                         Grid.Row="1" />
            <customViews:CustomEntryView ControlTemplate="{StaticResource EntryControlTemplate}"
                                         Text="{Binding AttackerD, Mode=TwoWay}"
                                         Grid.Column="4"
                                         Grid.Row="1" />
        </Grid>

    </VerticalStackLayout>
</ContentPage>